<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/goButton"
        android:layout_width="260dp"
        android:layout_height="122dp"
        android:background="@drawable/gobutton"
        android:onClick="start"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></Button>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-42dp">

        <TextView
            android:id="@+id/timer"
            android:layout_width="79dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:background="#B086ED"
            android:gravity="center_horizontal"
            android:text="30s"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/score"
            android:layout_width="86dp"
            android:layout_height="27dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#B086ED"
            android:gravity="center_horizontal"
            android:text="0/0"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/sum"
            android:layout_width="145dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:background="#BA0E1A"
            android:gravity="center_horizontal"
            android:text="1+1"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/score"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/timer"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"></TextView>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="405dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sum"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/but1"
                android:layout_width="204dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:background="#C8DA03"
                android:onClick="chooseAnswer"
                android:tag="0"
                android:text="45"
                android:textSize="80dp"></Button>

            <Button
                android:id="@+id/but2"
                android:layout_width="204dp"
                android:layout_height="100dp"
                android:layout_gravity="fill"
                android:background="#030EDA"
                android:onClick="chooseAnswer"
                android:tag="1"
                android:text="10"
                android:textSize="80dp"></Button>

            <Button
                android:id="@+id/but3"
                android:layout_width="204dp"
                android:layout_height="100dp"
                android:layout_gravity="fill"
                android:background="#DA5D03"
                android:onClick="chooseAnswer"
                android:tag="2"
                android:text="12"
                android:textSize="80dp"></Button>

            <Button
                android:id="@+id/but4"
                android:layout_width="199dp"
                android:layout_height="100dp"
                android:layout_gravity="fill"
                android:background="#C103DA"
                android:onClick="chooseAnswer"
                android:tag="3"
                android:text="9"
                android:textSize="80dp"></Button>
        </GridLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="166dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="CORRECT"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"></TextView>

        <Button
            android:id="@+id/playAgain"
            android:layout_width="205dp"
            android:layout_height="168dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/play"
            android:onClick="replay"
            android:textSize="35dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sum" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>